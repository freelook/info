<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="info.freelook"
        version="0.12.4">

  <name>FLI</name>

  <description>
    FLI - free look at information. Your personal information filter. Just look what you need.
  </description>

  <author href="https://about.freelook.info" email="freelook@mail.ua">
    Dima Kostrub
  </author>

  <content src="app.html"/>
  <preference name="permissions" value="none"/>
  <icon src="assets/images/icon.png"/>

  <access origin="*"/>

  <gap:plugin name="cordova-plugin-whitelist" source="npm"/>
  <gap:plugin name="org.apache.cordova.inappbrowser" source="npm"/>
  <gap:plugin name="cordova-plugin-customurlscheme" source="npm">
    <param name="URL_SCHEME" value="freelookinfo"/>
  </gap:plugin>

</widget>
